<!-- Modal -->
<div class="modal fade modal-xl" id="ModalProyecto"  data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Registro de Proyecto</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container text-center">
          
           
      
        <form  action="/api/proyecto" method="POST">
            <div class="row">
              <div class="col-4">
                <label for="nombre" class="form-label"><b>Nombre</b></label>
                <input type="text" class="form-control" id="nombre" name="nombre">
              </div>
              <div class="col-4">
                <label for="vendedor" class="form-label"><b>Vendedor</b></label>
                <input type="text" class="form-control" id="vendedor" name="vendedor">
              </div>
              <div class="col-4">
                <label for="cliente" class="form-label"><b>Cliente</b></label>
                <input type="text" class="form-control" id="cliente" name="cliente">
              </div>
            </div>
            <div class="row my-2">
                <div class="col-4">
                  <label for="estatus_proyecto" class="form-label" ><b>Estatus Proyecto</b> </label>
                  <select class="form-select" aria-label="Default select example" name="estatus_proyecto">
                    <option selected>Selecciona</option>
                    <option value="Proceso">Proceso</option>
                    <option value="Terminado">Terminado</option>
                    <option value="Reclamo">Reclamo</option>
                  </select>
                </div>
              </div>
              <div class="row text-center">
                <div class="col-12">
                <label for="especificaciones" class="form-label"><b>Especificaciones</b></label>
                <textarea class="form-control" id="especificaciones" name="especificaciones" rows="3"></textarea>
                </div>
              </div>
              <br>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class='bx bx-window-close'></i> Close</button>
              <button id="btn_proyecto" type="submit" class="btn btn-primary"><i class='bx bx-save'></i> Guardar</button>
            </form>
            </div>
            
      </div>
      </div>
      
    </div>
  </div>


  <div class="container">
    <br>
<button type="button" class="btn btn-success"  data-bs-toggle="modal" data-bs-target="#ModalProyecto"><i class='bx bx-plus-medical'></i> Proyecto</button>
<div class="row my-6">

<table id="myTable" class="table table-hover table-bordered table-striped text-center mt-4">
  <thead>
    <tr >
      <th scope="col">ID</th>
      <th scope="col">Nombre Proyecto</th>
      <th scope="col">Vendedor</th>            
      <th scope="col">Cliente</th>  
      <th scope="col">Estatus</th>
      <th scope="col">Acciones</th>  
    </tr>
  </thead>
  <% proyectos.forEach(results => { %>
  <tr>

    <td><%= results.idProyecto %> </td>
    <td><%= results.nombre %> </td>
    <td><%= results.vendedor %> </td>
    <td><%= results.cliente %> </td>
    <td><%= results.estatus_proyecto %> </td>
    <td><a href="/api/proyecto/<%= results.idProyecto %>" class="btn btn-warning mx-1"><i class='bx bxs-edit bx-sm'></i></a>
      <a href="/api/proyecto/eliminar/<%= results.idProyecto %>" class="btn btn-danger mx-1 "><i class='bx bx-trash-alt bx-sm' ></i></a>
      

  </tr>
  <% }) %> 

</table>

</div>
</div>
<%- include("templates/footer") %> 